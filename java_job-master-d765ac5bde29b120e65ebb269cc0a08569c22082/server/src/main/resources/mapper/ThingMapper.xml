<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gk.study.mapper.ThingMapper">


    <select id="getList" resultType="com.gk.study.entity.Thing">
        select *
        from b_thing;
    </select>

    <select id="getDetail" parameterType="String" resultType="com.gk.study.entity.Thing">
        select A.*, B.title as companyTitle
        from b_thing A
                 join b_company B
                      on A.company_id = B.id
        where A.id = #{id};
    </select>

    <select id="selectAdminList" parameterType="String" resultType="com.gk.study.entity.Thing">
        select A.*, B.title as companyTitle
        from b_thing A
                 join b_company B
                      on A.company_id = B.id

        <if test="keyword!=null">
            where A.title like concat('%',#{keyword,jdbcType=VARCHAR},'%');
        </if>
    </select>

</mapper>
